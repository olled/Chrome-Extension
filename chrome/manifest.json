{
  "name": "Projectplace",
  "version": "1.3",
  "description": "Auto login for Projectplace.com, now with convesations. This is not an official Projectplace App!",
  "browser_action": {
    "default_icon": "pp.png"
  },
  "background_page": "background.html",
  "options_page": "options.html",
  "icons": { "16": "icon-16.png",
           "48": "icon-48.png",
          "128": "icon-128.png" },
  "permissions": [
    "tabs",
    "notifications",
    "https://service.projectplace.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://service.projectplace.com/*"],
      "js": ["injected.js"]
    }
  ]
  
}